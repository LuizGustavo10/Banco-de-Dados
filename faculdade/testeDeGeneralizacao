SELECT pessoa.nome, cliente.rg, fornecedor.cnpj
FROM cliente INNER JOIN pessoa
ON cliente.idpessoa = pessoa.idpessoa
INNER JOIN fornecedor
ON pessoa.idpessoa = fornecedor.idpessoa